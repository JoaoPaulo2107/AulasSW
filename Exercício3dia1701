<?php
$n1=5;
$n2=2;

$adição=$n1+$n2;
$subtração=$n1-$n2;
$divisão=$n1/$n2;
$multiplicação=$n1 * $n2;
$resto=$n1%$n2;

echo "O resultado da Adição é: " . $adição . "   ";
echo "O resultado da subtração é: " . $subtração . "   " ;
echo "O resultado da multiplicação é: " . $multiplicação . "   ";
echo "O resultado da divisão é: " . $divisão . "   " ;
echo "O resto da divisão é: ". $resto


?>
